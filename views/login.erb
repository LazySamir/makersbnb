<head>
  <title>Makers BnB</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body>
  <img class="img-fluid" src="header.png">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <a class="navbar-brand" href="/">Makers BnB</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">

          <% if session[:current_user] != nil %>
            <span class="navbar-text">
              Hello, <%= session[:current_user].handle %>
            </span>
          <% end%>

          <ul class="navbar-nav ml-auto">
            <% if session[:current_user] == nil %>
              <li>
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li>
                <a class="nav-link" href="/signup">Signup</a>
              </li>
            <% else %>
              <li>
                <a class="nav-link" href="/sign_out">Sign Out</a>
              </li>
              <li>
                <a class="nav-link" href="/members_area">Members Area</a>
              </li>
              <li>
              <a class="nav-link" href="/members_area/messages">Messages</a>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </nav>

  <form action="/login" method="post">
    <input type="text" name="handle" required> Username
    <br>
    <input type="password" name="password" required> Password
    <br>
    <br>
    <input type="submit" value="Submit">
  </form>

  <center>
    <h1>
      <%= "Hello, #{session[:current_user].name}" unless session[:current_user] == nil %>
    </h1>
    <h1>
      <%= flash[:notice] %>
    </h1>
  </center>
</body>
